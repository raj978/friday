# Friday Production Environment Variables
# Copy this file to .env and fill in your values
# DO NOT commit the .env file with real secrets!

# ====================
# Port Configuration
# ====================
# Port to expose Friday on (default: 3000)
FRIDAY_PORT=3000

# ====================
# Security (REQUIRED)
# ====================
# Generate a secure random key: openssl rand -base64 32
# This is used for session encryption and JWT tokens
WEBUI_SECRET_KEY=

# ====================
# AI Provider API Keys
# ====================
# OpenAI API Key (for GPT models)
OPENAI_API_KEY=

# Anthropic API Key (for Claude models)
ANTHROPIC_API_KEY=

# Google AI API Key (for Gemini models)
GOOGLE_API_KEY=

# ====================
# Custom API Endpoints (Optional)
# ====================
# Use custom OpenAI-compatible endpoints
# OPENAI_API_BASE_URL=https://api.openai.com/v1
# ANTHROPIC_API_BASE_URL=https://api.anthropic.com

# ====================
# Database (Optional)
# ====================
# Leave empty to use SQLite (recommended for single instance)
# For PostgreSQL: postgresql://user:password@host:5432/dbname
# DATABASE_URL=

# ====================
# CORS Settings
# ====================
# Allow all origins (default), or specify your domain
CORS_ALLOW_ORIGIN=*

# ====================
# File Upload Settings
# ====================
# Maximum file size in MB (default: 100)
# UPLOAD_FILE_SIZE_LIMIT=100

# ====================
# RAG (Retrieval Augmented Generation) Settings
# ====================
# Embedding model for document search
# Default: sentence-transformers/all-MiniLM-L6-v2
# For better multilingual support: intfloat/multilingual-e5-large
# RAG_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Chunk size for document processing
# RAG_CHUNK_SIZE=1000
# RAG_CHUNK_OVERLAP=200

# ====================
# Speech-to-Text Settings
# ====================
# Whisper model size: tiny, base, small, medium, large
# Larger = better quality but slower/more memory
WHISPER_MODEL=base

# ====================
# Privacy & Telemetry
# ====================
# Disable all telemetry (recommended)
ANONYMIZED_TELEMETRY=false
DO_NOT_TRACK=true
SCARF_NO_ANALYTICS=true

# ====================
# User Management
# ====================
# Require email verification for new users
# ENABLE_SIGNUP=true
# ENABLE_EMAIL_VERIFICATION=false

# Default user role: pending, user, admin
# DEFAULT_USER_ROLE=user

# ====================
# Optional: Email Configuration (for notifications)
# ====================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=
# SMTP_PASSWORD=
# SMTP_FROM_EMAIL=
